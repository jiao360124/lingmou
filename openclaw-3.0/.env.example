# OpenClaw 3.0 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# API 配置
API_BASE_URL=https://api.openai.com/v1
API_KEY=your_api_key_here

# Token 预算
DAILY_BUDGET=200000

# 调用配置
TURN_THRESHOLD=10
BASE_CONTEXT_THRESHOLD=40000
COOLDOWN_TURNS=3

# 夜间任务配置
NIGHTLY_TASK_TIME=03:00
NIGHT_BUDGET_TOKENS=50000
NIGHT_BUDGET_CALLS=10

# 监控配置
MAX_REQUESTS_PER_MINUTE=60
ENABLE_MONITORING=true

# 日志配置
ENABLE_LOGGING=true
LOG_LEVEL=info
DEBUG=false

# 超时配置
TIMEOUT=30000

# 重试配置
RETRY_ATTEMPTS=5
