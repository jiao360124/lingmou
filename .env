# OpenClaw Environment Configuration
# This file contains environment variables for OpenClaw

# ============================================================================
# GENERAL CONFIGURATION
# ============================================================================

# Workspace directory
WORKSPACE_DIR=C:\Users\Administrator\.openclaw\workspace

# Timezone
TIMEZONE=Asia/Shanghai

# ============================================================================
# GATEWAY CONFIGURATION
# ============================================================================

# Gateway URL
GATEWAY_URL=http://localhost:8080

# Gateway Token
GATEWAY_TOKEN=

# Session key for main session
MAIN_SESSION_KEY=

# ============================================================================
# GIT CONFIGURATION
# ============================================================================

# GitHub repository
GITHUB_REPO=https://github.com/jiao360124/AE8F88.git

# GitHub username
GITHUB_USERNAME=

# GitHub token (Personal Access Token)
GITHUB_TOKEN=

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup schedule (Cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention (days)
BACKUP_RETENTION_DAYS=7

# Backup directory
BACKUP_DIR=C:\Users\Administrator\.openclaw\workspace\backup

# ============================================================================
# MOLTBOOK CONFIGURATION
# ============================================================================

# Moltbook API URL
MOLTBOOK_API_URL=https://moltbook.com/api

# Moltbook API Key
MOLTBOOK_API_KEY=

# Moltbook Agent Name
MOLTBOOK_AGENT_NAME=灵眸

# Moltbook Learning Rate
MOLTBOOK_LEARNING_RATE=0.1

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log directory
LOG_DIR=C:\Users\Administrator\.openclaw\workspace\logs

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log rotation size (MB)
LOG_ROTATION_SIZE=10

# Log retention days
LOG_RETENTION_DAYS=30

# ============================================================================
# MEMORY CONFIGURATION
# ============================================================================

# Memory limit (MB)
MEMORY_LIMIT=512

# Memory warning threshold (%)
MEMORY_WARNING_THRESHOLD=80

# Memory critical threshold (%)
MEMORY_CRITICAL_THRESHOLD=90

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache directory
CACHE_DIR=C:\Users\Administrator\.openclaw\workspace\cache

# Cache TTL (seconds)
CACHE_TTL=300

# Cache max size (MB)
CACHE_MAX_SIZE=100

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Connection pool size
CONNECTION_POOL_SIZE=50

# ============================================================================
# SCHEDULING CONFIGURATION
# ============================================================================

# Heartbeat interval (minutes)
HEARTBEAT_INTERVAL=5

# Cron check interval (minutes)
CRON_CHECK_INTERVAL=5

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Enable SSL verification
ENABLE_SSL_VERIFICATION=true

# Request timeout
REQUEST_TIMEOUT_SECONDS=30

# Max retry attempts
MAX_RETRY_ATTEMPTS=3

# Retry delay (ms)
RETRY_DELAY=1000

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Dry run mode (no actual changes)
DRY_RUN=false
